<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <div class="text-center">
        <h1>TimR</h1>
        <div id="timer-container">
          <input type="text" id="task-description" placeholder="Enter task description" class="form-control my-3">
          <button id="start-stop-btn" class="btn btn-primary">Start</button>
          <div id="elapsed-time" class="mt-3">0h 0m 0s</div>
        </div>
        <div id="time-entries">
          <h2>Recent Time Entries</h2>
          <ul id="time-entries-list" class="list-group">
            <!-- Time entries will be added here dynamically -->
          </ul>
        </div>
      </div>
    </main>
  </body>
<%- include('partials/_footer.ejs') %>
  <script src="/js/main.js"></script>
</html>